<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailsActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/back_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back_btn"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_action_back"
                android:layout_centerVertical="true"
                app:tint="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back"
                android:textSize="@dimen/small_text_size"
                android:gravity="center"
                android:singleLine="true"
                android:layout_centerVertical="true"
                android:textColor="@color/black"
                android:layout_toRightOf="@+id/back_btn"/>

        </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/bottom_layout">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sofa_img"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/sofa_new"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sofa Baleria"
                        android:textColor="@color/black"
                        android:textSize="@dimen/large_heading_text_size"
                        android:textStyle="bold"/>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:background="@drawable/rating_bg"
                            android:gravity="center"
                            android:padding="3dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.5"
                                android:textSize="@dimen/small_text_size"
                                android:textColor="@color/white"
                                android:gravity="center"/>

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:src="@drawable/ic_action_star"
                                app:tint="@color/white"
                                android:layout_marginStart="3dp"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1034 Ratings"
                            android:textSize="@dimen/small_text_size"
                            android:textColor="@color/grey"
                            android:gravity="center"
                            android:layout_marginStart="10dp"/>

                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:background="@color/grey"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="104 Reviews"
                            android:textSize="@dimen/small_text_size"
                            android:textColor="@color/grey"
                            android:gravity="center"
                            android:layout_marginStart="10dp"/>

                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Rent"
                                android:textColor="@color/black"
                                android:textSize="@dimen/normal_heading_text_size"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$790/"
                                android:textColor="@color/black"
                                android:textSize="@dimen/normal_heading_text_size"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="month"
                                android:textColor="@color/black"
                                android:textSize="@dimen/heading_text_size"
                                android:textStyle="bold"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Refundable Deposit"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/normal_heading_text_size"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$1899"
                                android:textColor="@color/grey"
                                android:textSize="@dimen/normal_heading_text_size"
                                android:textStyle="bold"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="@color/purple_transparancy">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/gift_img"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:src="@drawable/gift_icon"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"/>

                            <TextView
                                android:id="@+id/coupon_txt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Get 10% off on this product by using coupon code RENTO"
                                android:textColor="@color/white"
                                android:textSize="@dimen/normal_text_size"
                                android:textStyle="bold"
                                android:layout_toStartOf="@+id/gift_img"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="View All Offers"
                                android:textColor="@color/white"
                                android:textSize="@dimen/small_text_size"
                                android:layout_alignParentStart="true"
                                android:layout_alignParentBottom="true"/>

                        </RelativeLayout>

                    </androidx.cardview.widget.CardView>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select Size"
                                android:textColor="@color/black"
                                android:textSize="@dimen/normal_heading_text_size"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.8"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6x3"
                                android:textColor="@color/black"
                                android:textSize="@dimen/small_text_size"
                                android:gravity="center"
                                android:background="@drawable/round_bg"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6x4"
                                android:textColor="@color/black"
                                android:textSize="@dimen/small_text_size"
                                android:gravity="center"
                                android:background="@drawable/round_bg"
                                android:layout_marginStart="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6x5"
                                android:textColor="@color/black"
                                android:textSize="@dimen/small_text_size"
                                android:gravity="center"
                                android:background="@drawable/round_bg"
                                android:layout_marginStart="10dp"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="6x6"
                                android:textColor="@color/black"
                                android:textSize="@dimen/small_text_size"
                                android:gravity="center"
                                android:background="@drawable/round_bg"
                                android:layout_marginStart="10dp"/>

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="wrap_content"
                        android:layout_height="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Select Tenure"
                                android:textColor="@color/black"
                                android:textSize="@dimen/normal_heading_text_size"
                                android:textStyle="bold"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.8"
                            android:orientation="horizontal">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/edittext_height_size"
                                android:hint="Please Enter Your Tenure"
                                android:textColorHint="@color/purple_200"
                                android:textColor="@color/purple_200"
                                android:textSize="@dimen/small_text_size"
                                android:gravity="center"
                                android:background="@drawable/text_rectangle_border_bg"/>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"/>

            </LinearLayout>

        </ScrollView>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/theme_bg"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/add_to_cart_txt"
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:text="Add to Cart"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/black"
            android:gravity="center"
            android:background="@drawable/edittext_bg"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/rent_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rent"
            android:textSize="@dimen/normal_text_size"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_alignParentStart="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$5039 for 36Month"
            android:textSize="@dimen/heading_text_size"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:layout_below="@+id/rent_txt"
            android:layout_toStartOf="@+id/add_to_cart_txt"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

</RelativeLayout>